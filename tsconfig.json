{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "src",
    "downlevelIteration": true,
    "alwaysStrict": true,
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"],
    "paths": {
      "@/*": ["page/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
